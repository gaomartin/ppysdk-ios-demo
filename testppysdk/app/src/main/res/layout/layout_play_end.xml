<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/popup_bg"
        android:scaleType="centerCrop"
        android:id="@+id/bg"/>
    <ImageButton
        android:layout_width="@dimen/button_small_icon_size"
        android:layout_height="@dimen/button_small_icon_size"
        android:id="@+id/close"

        android:background="@drawable/close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/center_layout"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="1px"
            android:orientation="horizontal"
            android:background="@color/color_7FFFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_E0FFFFFF"
                android:text="直播已结束"
                android:textSize="34sp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="1px"
            android:orientation="horizontal"
            android:background="@color/color_7FFFFFFF"/>
    </LinearLayout>

</RelativeLayout>
